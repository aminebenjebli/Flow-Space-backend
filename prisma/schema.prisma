generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  email            String    @unique
  name             String
  bio             String?
  password         String
  profilePicture            String?
  otpCode          String?
  otpCodeExpiresAt DateTime?
  isEmailVerified  Boolean   @default(false)
}
